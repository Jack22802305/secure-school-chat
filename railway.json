{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd 'Messaging platform test v2' && go build -o ../school-chat school_secure_server.go"
  },
  "deploy": {
    "startCommand": "./school-chat",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}